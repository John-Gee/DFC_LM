#!/usr/bin/env bash


function addCSUM() {
    extension="$1"

    grep -o -P -e "\".*\.$extension.*?\"" ../site/index.html | while read -r line
    do
        if [[ $line == *"http"* ]]
        then
            continue
        fi

        line=${line:1:-1}
        cleanLine="${line%\?*}"
        xxcsum=`xxh32sum "$cleanLine"`
        csum="${xxcsum:0:8}"
        sed -i "s|\"$line\"|\"$cleanLine?c=$csum\"|" ../site/index.html
        #echo $line $csum

    done
}

function cleanPaths() {
    sed -i "s|../site/||" ../site/index.html
}

function concatFiles() {
    cat css/{chart,fonts,guide,select2,style}.css > ../site/css/style.css
    for f in {chart,fonts,guide,select2}.css
    do
        sed -i "/^.*$f.*$/d" ../site/index.html
    done

    cat js/{events,functions}.js > ../site/js/functions.js
    for f in events.js
    do
        sed -i "/^.*$f.*$/d" ../site/index.html
    done
}

cp -a index.html ../site/
concatFiles
addCSUM js
addCSUM css
cleanPaths
