#!/usr/bin/env bash


function addCSUM() {
    extension="$1"

    grep -o -P -e "\".*\.$extension.*?\"" index.html | while read -r line
    do
        if [[ $line == *"http"* ]]
        then
            continue
        fi

        line=${line:1:-1}
        cleanLine="${line%\?*}"
        xxcsum=`xxh32sum "$cleanLine"`
        csum="${xxcsum:0:8}"
        sed -i "s|\"$line\"|\"$cleanLine?c=$csum\"|" index.html
    done
}

function cleanPaths() {
    sed -i "s|../docs/||" "$1"
}

function minifyCSS() {
    minCSS=`cat css/{chart,fonts,guide,header,info,investment,outcome,select2,style,tooltips,queries}.css |
    sed "s|../docs/||" | sed "s|../fonts/|fonts/|" |npx postcss -m`
    for f in {chart,fonts,guide,header,info,investment,outcome,select2,tooltips,queries}.css
    do
        sed -i "/^.*$f.*$/d" ../docs/index.html
    done
    sed -i "s|^.*style.css.*$|<style type=text/css>$minCSS</style>|" ../docs/index.html
}

function minifyJS() {
    cat js/{de,en,fr,events,functions}.js | sed "s|../docs/||" | sed "s|'\"head\" \"calc\"'|'\"h\" \"ca\"'|" | sed "s|'\"head\" \"info\"'|'\"h\" \"i\"'|" | \
    uglifyjs -o ../docs/js/functions.min.js \
    -c -m --source-map "root='../src/js',url='functions.min.js.map'"
    sed -i "s|functions.js|functions.min.js|" ../docs/index.html
    for f in {de,en,fr,events}
    do
        sed -i "/^.*$f\.js.*$/d" ../docs/index.html
    done
}

function minifyHTML() {
    #
    #--remove-attribute-quotes
    #--minify-urls
    npx html-minifier --collapse-boolean-attributes --collapse-inline-tag-whitespace \
    --collapse-whitespace --conservative-collapse --decode-entities \
    --no-include-auto-generated-tags --prevent-attributes-escaping \
    --process-conditional-comments --remove-comments --remove-empty-attributes \
    --remove-optional-tags --remove-redundant-attributes --sort-attributes --sort-class-name \
    --trim-custom-fragments --use-short-doctype ../docs/index.html  -o ../docs/index.html
}

cp -a index.html ../docs/
minifyCSS
minifyJS
cd ../docs
cleanPaths index.html
addCSUM js
addCSUM css
cd ../src
minifyHTML
